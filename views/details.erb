      <input name="comment[author]" type="text" class="form-control" placeholder="Please, enter your name">
    </div>
  </div>

  <div class="form-group">
    <label for="exampleFormControlTextarea1">For text</label>
    <textarea name="comment[content]" class="form-control" id="exampleFormControlTextarea1" placeholder="Enter your comment" rows="15" value="%= @comment.content %"></textarea>
  </div>

<button type="submit" class="btn btn-primary">Add comment</button>

</form>
